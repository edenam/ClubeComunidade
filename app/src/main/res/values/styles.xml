<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:icon">@mipmap/ic_launcher</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
        <item name="icon">@mipmap/ic_launcher</item>
    </style>


    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <item name="android:divider">@null</item>

        <item name="background">@drawable/actionbar_tab_indicator</item>
        <item name="showDividers">none</item>

    </style>


    <style name="events_listing_title">
        <item name="android:textColor">@color/events_list_divider_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="events_listing_other">
        <item name="android:textColor">@color/view_divider_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <drawable name="actionbar_background">#1f74ad</drawable>
    <drawable name="tab_unselected">#1f74ad</drawable>
    <drawable name="tab_selected">#479cd5</drawable>

    <drawable name="tab_unselected_focused">#FF0000</drawable>
    <drawable name="tab_selected_focused">#FF0000</drawable>
    <drawable name="tab_unselected_pressed">#FF0000</drawable>
    <drawable name="tab_selected_pressed">#FF0000</drawable>
</resources>